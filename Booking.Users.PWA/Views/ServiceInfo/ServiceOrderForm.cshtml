@model BookingRequestViewModel
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderModalLabel">Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="BookingRequests" asp-action="CreateBookingRequest">
                <div class="modal-body">
                    <input type="hidden" asp-for="@Model.ServiceId" value="@Model.ServiceId" />
                    <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId" />
                    <div class="form-group">
                        <label for="exampleInputEmail1">Days</label>
                        <input asp-for="@Model.Days" min="0" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Hours</label>
                        <input asp-for="@Model.Hours" min="0" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Minutes</label>
                        <input asp-for="@Model.Minutes" min="0" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Your wishes</label>
                        <textarea asp-for="@Model.Info" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>