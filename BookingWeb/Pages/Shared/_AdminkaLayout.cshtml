<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Booking.Net platform for business owners">
    <meta name="author" content="SeriousCoders">
    <title>Booking System - @ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <script src="https://use.fontawesome.com/c87fad31f8.js"></script>

    <style>
        html {
            position: relative;
        }

        html,
        body {
            height: 100%;
        }

        .home-intro {
            background: url('http://astylers.com/oya/images/bg-intro.png'), #f8f5ff;
            background-repeat: no-repeat;
            padding: 130px 0 150px !important;
            background-size: 55%;
            background-position: top right;
        }
    </style>
</head>

<body>

    <!--NAVBAR-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <!--LOGO-->
            <a class="navbar-brand"><img id="logo" src="~/booking.png" height="50" width="50" alt="LOGO"></a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item breadcrumb">
                        <a class="nav-link breadcrumb-item active text-primary">Owner panel</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-primary"><i class="fa fa-street-view" aria-hidden="true"></i> @ViewData["Title"]</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active text-primary" asp-page="/Dashboard">Dashboard</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-page="/BookingRequests">Booking Requests</a>
                    </li>

                    <li class="nav-item">

                        <div class="dropdown show">
                            <a class="btn btn-outline-primary dropdown-toggle" asp-page="/Service" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Service
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-page="/ServiceCreate"><i class="fa fa-plus-square" aria-hidden="true"></i> Create</a>
                                <a class="dropdown-item" asp-page="/Service"><i class="fa fa-book" aria-hidden="true"></i> Manage</a>
                            </div>
                        </div>

                    </li>

                </ul>

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-address-card" aria-hidden="true"></i> @ViewData["user"]
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-page="/Profile">Profile</a>
                        <a class="dropdown-item bg-warning" asp-page="/Logout">Logout</a>
                            
</div>
                </div>


            </div>
        </div>
    </nav>

    <!--NAVBAR END-->

    @RenderBody()

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


</body>

</html>
