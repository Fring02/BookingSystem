@page

@{
    Layout = "_AuthLayout";
}


@model BookingWeb.Pages.RegisterModel
@{ ViewData["Title"] = "Registration";}

<div id="right">
    <div class="registerBox">
        <form asp-page-handler="RegisterOwner" method="post" id="regform">
            <label asp-for="RegisterForm.Firstname" for="fname">First name</label>
            <input asp-for="RegisterForm.Firstname" type="text" id="fname" placeholder="" value="" required>

            <label asp-for="RegisterForm.Lastname" for="lname">Last name</label>
            <input asp-for="RegisterForm.Lastname" type="text" id="lname" placeholder="" value="" required>

            <label asp-for="RegisterForm.Email" for="email">Email <span class="text-muted">(Required)</span></label>
            <input asp-for="RegisterForm.Email" type="email" id="email" placeholder="you@example.com">

            <label asp-for="RegisterForm.Password" for="pass">Password</label>
            <input asp-for="RegisterForm.Password" type="password" id="pass" placeholder="**********" required>

            <label asp-for="RegisterForm.MobilePhone" for="mobile">Mobile Phone</label>
            <input asp-for="RegisterForm.MobilePhone" type="text" id="mobile" placeholder="12345678899" required>

            <hr class="mb-4">
            <button class="knopka" id="regBtn">Sign up</button>
            <a asp-page="/Login">Already created your account?</a>
        </form>
    </div>
</div>
