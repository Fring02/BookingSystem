@page
@model BookingWeb.Pages.LogoutModel
@{
}

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Booking.Net platform for business owners">
    <meta name="author" content="SeriousCoders">
    <title>Booking system</title>
    <link rel="shortcut icon" type="image/png" href="favicon.ico" />
    <!--BOOTSTRAP STYLE FILE-->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" />
    <script src="https://use.fontawesome.com/c87fad31f8.js"></script>
    <!--STYLE FOR IMAGE-->
    <style>
        html {
            position: relative;
        }

        html,
        body {
            height: 100%;
        }

        .home-intro {
            background: url('http://astylers.com/oya/images/bg-intro.png'), #f8f5ff;
            background-repeat: no-repeat;
            padding: 130px 0 150px !important;
            background-size: 55%;
            background-position: top right;
        }
    </style>
</head>

<body>

    <!--NAVBAR-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <!--LOGO-->
            <a class="navbar-brand" asp-page="/Index"><img id="logo" src="~/booking.png" height="50" width="50" alt="LOGO"></a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="navbar-brand nav-link text-primary" asp-page="/Index">Booking.NET</a>
                    </li>

                <div class="d-flex">
                    <a class="btn btn-outline-primary mx-2" asp-page="/Login">Login</a>
                    <a class="btn btn-primary mx-2" asp-page="/Register">Sign Up</a>
                </div>

            </div>
        </div>
    </nav>

    <!--NAVBAR END-->

    <div class="home-intro h-100 d-flex flex-column justify-content-end">

        <div class="container h-75">

            <div class="row h-100">

                <div class="col-6 d-flex flex-column justify-content-around">

                    <div class="col-12">
                        <h1 class="text-primary">Sign out</h1>
                    </div>

                    <div class="col-8">
                        <h4>@ViewData["message"]</h4>
                    </div>

                </div>

            </div>

        </div>

    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


</body>

</html>
